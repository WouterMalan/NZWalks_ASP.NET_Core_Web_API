@model NZWalks.Web.Models.DTO.RegionDto

<h1 class="mt-3">Edit Region</h1>

@if (Model != null)
{
    <form method="post">
        <div hidden class="mt-3">
            <label class="form-label">Id</label>
            <input class="form-control" asp-for="Id" />
        </div>

        <div class=" mt-3">
            <label class="form-label">Code</label>
            <input class="form-control" asp-for="Code" />
        </div>

        <div class=" mt-3">
            <label class="form-label">Name</label>
            <input class="form-control" asp-for="Name" />
        </div>

        <div class=" mt-3">
            <label class="form-label">Image URL</label>
            <input class="form-control" asp-for="RegionImageUrl" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" asp-controller="Regions" asp-action="Delete" class="btn btn-danger">Delete</button>
        </div>


    </form>
}